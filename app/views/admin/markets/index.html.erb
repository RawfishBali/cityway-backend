<div class="md-card uk-margin-medium-bottom">
    <div class="md-card-content">
        <div class="uk-overflow-container">
            <table class="uk-table uk-table-nowrap table_check">
                <thead>
                <tr>
                    <th class="uk-width-1-10">Name</th>
                    <th class="uk-width-1-10 uk-text-center">Address</th>
                    <th class="uk-width-1-10 uk-text-center">Description</th>
                    <th class="uk-width-1-10 uk-text-center">Photo</th>
                    <th class="uk-width-1-10 uk-text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                    <% @admin_markets.each do  |market|%>
                    <tr>

                        <td class=""><%= market.name  %></td>
                        <td class="uk-text-center"><%= market.address %></td>
                        <td class="uk-text-center"><%= truncate(market.description, length: 25, omission: '...') %></td>
                        <td class="uk-text-center"><%= image_tag market.primary_photo.first.picture.url, class: 'width100pixel' unless market.primary_photo.first.blank?  %></td>

                        <td class="uk-text-center">
                            <%= link_to '<i class="md-icon material-icons">&#xE254;</i>'.html_safe , edit_admin_market_path(market)%>


                        </td>
                    </tr>
                    <% end %>

                </tbody>
            </table>
            <%= paginate @admin_markets %>
        </div>
    </div>
    <div class="md-fab-wrapper">
        <a class="md-fab md-fab-accent md-fab-wave-light waves-effect waves-button waves-light" href="/admin/markets/new" id="invoice_add">
            <i class="material-icons">î……</i>
        </a>
    </div>
</div>
