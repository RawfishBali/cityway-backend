<div class="md-card uk-margin-medium-bottom">
  <div class="md-card-content">
    <div class="uk-overflow-container">
      <table class="uk-table uk-table-nowrap table_check">
        <thead>
          <tr>
            <th class="uk-width-1-10">Nome</th>
            <th class="uk-width-1-10 uk-text-center">Percorso</th>
            <th class="uk-width-1-10 uk-text-center">Tipo</th>
            <th class="uk-width-1-10 uk-text-center">Azioni</th>
          </tr>
        </thead>
        <tbody>
          <% @admin_public_transports.each do  |public_transport|%>
          <tr>
            <td class=""><%= public_transport.name  %></td>
            <td class="uk-text-center"><%= truncate(public_transport.paths.map(&:path).join(' , '), length: 25, omission: '...') %></td>
            <td class="uk-text-center"><%= public_transport.transport_type %></td>
            <td class="uk-text-center">
              <%= link_to '<i class="md-icon material-icons">&#xE254;</i>'.html_safe , edit_admin_public_transport_path(public_transport)%>
              <%= link_to '<i class="md-icon material-icons ">&#xE872;</i>'.html_safe, admin_public_transport_path(public_transport), method: :delete , :data => {:confirm => 'Sei sicuro di voler cancellare?'} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @admin_public_transports %>
    </div>
  </div>
  <div class="md-fab-wrapper">
    <a class="md-fab md-fab-accent md-fab-wave-light waves-effect waves-button waves-light" href="/admin/public_transports/new?transport_type=<%= params[:transport_type]%>" id="invoice_add">
      <i class="material-icons">î……</i>
    </a>
  </div>
</div>
