<div class="md-card">
  <div class="md-card-content">
    <%= form_for(@admin_sport, url: (@admin_sport.new_record? ? admin_sports_path(@admin_sport) : admin_sport_path(@admin_sport)), multipart: true) do |f| %>
    <% if @admin_sport.errors.any? %>
    <div id="error_explanation">
      <h2>Qualcosa è andato storto durante il salvataggio dei dati</h2>
      <ul>
        <% @admin_sport.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <h2 class=" ">
      <% if @admin_sport.new_record?%>
      Aggiungi Strutture Sportive
      <% else %>
      Gestisci Strutture Sportive
      <% end %>
      <%= link_to '<i class="fa fa-arrow-circle-left fa-2x" aria-hidden="true"></i>'.html_safe, :back, class:'float-right' %>
    </h2>
    <%= hidden_field_tag :sport_types, @sport_types %>
    <div class="uk-grid" data-uk-grid-margin>
      <%#= f.hidden_field :place_type , value: @place_type %>
      <%#= f.hidden_field :is_public , value: @is_public %>


      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Nome</label>
              <%= f.text_field :name, required: true,class: 'md-input'  %>
            </div>
            <div class="uk-width-medium-1-2">
              <%= f.text_field :sport_type, required: true, class: '', required: true, value: (@admin_sport.sport_type ? @admin_sport.sport_type.humanize.titleize : '') %>
              <!-- <label>Denominazione</label> -->
              <%#= f.text_field :denomination, required: false,class: 'md-input'  %>
            </div>
          </div>
        </div>
      </div>



      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Website</label>
              <%= f.text_field :website,class: 'md-input'  %>
            </div>
            <div class="uk-width-medium-1-2">
              <label>Indirizzo</label>
              <%= f.text_field :address, required: true,class: 'md-input addressable'  %>
            </div>
          </div>
        </div>
      </div>
      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Email</label>
              <%= f.email_field :email,class: 'md-input'  %>
            </div>
            <div class="uk-width-medium-1-2">
              <label>Cellulare</label>
              <%= f.text_field :phone,class: 'md-input'  %>
            </div>
          </div>
        </div>
      </div>
      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Facebook</label>
              <%= f.text_field :facebook,class: 'md-input'  %>
            </div>
            <div class="uk-width-medium-1-2">
              <label>Instagram</label>
              <%= f.text_field :instagram,class: 'md-input'  %>
            </div>
          </div>
        </div>
      </div>
      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Twitter</label>
              <%= f.text_field :twitter,class: 'md-input'  %>
            </div>
            <div class="uk-width-medium-1-2">
              <label>Google+</label>
              <%= f.text_field :google_plus,class: 'md-input'  %>
            </div>
          </div>
        </div>
      </div>


      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>

            <div class="uk-width-medium-1-2">
              <label>Descrizione</label>
              <%= f.text_area :description, required: true,class: 'md-input'  %>
            </div>
            <div class="uk-width-medium-1-2">
              <label>Icona</label>
              <span class="font-size-11">(Suggerimento immagine 100 x 100px)</span>
              <br />

              <div class="dropzone" data-width="200" data-originalsize="true" data-height="200"    data-image="<%= f.object.icon.url %>"  data-editstart="false" data-ajax="false",  data-canvas="true">
                <%= f.file_field :icon%>
              </div>
            </div>
          </div>
        </div>
      </div>


      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <div id="subcategories">
                <h3>Orari</h3>
                <%= f.fields_for :business_hours do |business_hour| %>
                <%= render 'business_hour_fields', f: business_hour %>
                <% end %>
                <div class="links">
                  <%= link_to_add_association '<i class="material-icons md-24"></i>'.html_safe, f, :business_hours %>
                </div>
              </div>
            </div>
            <div class="uk-width-medium-1-2">
              <div class="uk-form-row">
                <div id="photos">
                  <h3>Foto</h3>
                  <%= f.fields_for :photos do |photo| %>
                  <%= render 'photo_fields', f: photo %>
                  <% end %>
                  <div class="links">
                    <%= link_to_add_association '<i class="material-icons md-24"></i>'.html_safe, f, :photos %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="md-fab-wrapper">
    <%= button_tag(type: 'submit' , class: 'md-fab md-fab-accent md-fab-wave waves-effect waves-button') do %>
    <i class="fa fa-floppy-o" aria-hidden="true"></i>
    <% end %>
  </div>
  <% end %>

</div>
