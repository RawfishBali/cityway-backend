<div class="nested-fields">
  <div class="uk-grid" data-uk-grid-margin>
    <div class="uk-width-large-1-1 uk-width-1-1">
      <div class="uk-input-group subcategory-container">

        <div class="uk-grid" data-uk-grid-margin="">
          <div class="uk-width-medium-1-1 uk-row-first">

            <div class="md-input-wrapper md-input-filled"><label>Giorno</label>
              <%= f.text_field :event_date, class: 'md-input', value:(f.object.event_date ?  f.object.event_date.strftime("%d/%m/%Y") : ''), 'data-uk-datepicker':"{format:'DD/MM/YYYY'}" %>
              <span class="md-input-bar "></span></div>

          </div>
        </div>


        <div class="uk-grid" data-uk-grid-margin="">
          <div class="uk-width-medium-1-2 uk-row-first">
            <div class="md-input-wrapper md-input-filled"><label>Orario Apertura</label><%= f.text_field :open_time, class: 'md-input', 'data-uk-timepicker': true,value: (f.object.open_time.strftime('%H:%M') if f.object.open_time) %><span class="md-input-bar "></span></div>

          </div>
          <div class="uk-width-medium-1-2">
            <div class="md-input-wrapper md-input-filled"><label>Orario Chiusura</label><%= f.text_field :close_time, class: 'md-input', 'data-uk-timepicker': true,value: (f.object.close_time.strftime('%H:%M') if f.object.close_time) %><span class="md-input-bar "></span></div>

          </div>
        </div>

        <div class="uk-grid" data-uk-grid-margin="">
          <div class="uk-width-medium-1-2 uk-row-first">
            <div class="md-input-wrapper">
            </div>
          </div>
          <div class="uk-width-medium-1-2 uk-row-first">
            <div class="md-input-wrapper text-align-right">
              <%= link_to_remove_association '<i class="material-icons md-24 ">î¡²</i>'.html_safe, f, {class: 'btnSectionRemove'} %>
            </div>
          </div>
        </div>


      </div>

    </div>
  </div>
</div>
