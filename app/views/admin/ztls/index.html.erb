<div class="md-card uk-margin-medium-bottom">
  <div class="md-card-content">
    <div class="uk-overflow-container">
      <table class="uk-table uk-table-nowrap table_check">
        <thead>
          <tr>
            <th class="uk-width-1-10">Nome</th>
            <th class="uk-width-1-10 uk-text-center">Descrizione</th>
            <th class="uk-width-1-10 uk-text-center">Azioni</th>
          </tr>
        </thead>
        <tbody>
          <% @admin_ztls.each do  |ztl|%>
          <tr>
            <td class=""><%= ztl.name  %></td>
            <td class="uk-text-center"><%= truncate(ztl.description, length: 25, omission: '...') %></td>
            <td class="uk-text-center">
              <%= link_to '<i class="md-icon material-icons">&#xE254;</i>'.html_safe , edit_admin_ztl_path(ztl)%>
              <%= link_to '<i class="md-icon material-icons ">&#xE872;</i>'.html_safe, admin_ztl_path(ztl), method: :delete , :data => {:confirm => 'Sei sicuro di voler cancellare?'} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @admin_ztls %>
    </div>
  </div>
  <div class="md-fab-wrapper">
    <a class="md-fab md-fab-accent md-fab-wave-light waves-effect waves-button waves-light" href="/admin/ztls/new" id="invoice_add">
      <i class="material-icons">î……</i>
    </a>
  </div>
</div>
