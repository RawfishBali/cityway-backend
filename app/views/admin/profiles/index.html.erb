<div class="md-card uk-margin-medium-bottom">
  <div class="md-card-content">
    <div class="uk-overflow-container">
      <table class="uk-table uk-table-nowrap table_check">
        <thead>
          <tr>
            <th class="uk-width-1-10">Name</th>
            <th class="uk-width-1-10">Photo</th>
            <th class="uk-width-1-10">Role</th>
            <th class="uk-width-1-10 uk-text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if params[:major] %>
            <% if @admin_profiles %>
              <tr>
                <td class=""><%= @admin_profiles.name  %></td>
                <td class=""><%= image_tag @admin_profiles.photo.url  %></td>
                <td class=""><%= @admin_profiles.role  %></td>
                <td class="uk-text-center">
                  <%= link_to '<i class="md-icon material-icons">&#xE254;</i>'.html_safe , edit_admin_profile_path(@admin_profiles)%>
                </td>
              </tr>
            <% end %>
          <% else %>
            <% @admin_profiles.each do  |profile|%>
            <tr>
              <td class=""><%= profile.name  %></td>
              <td class=""><%= image_tag profile.photo.url  %></td>
              <td class=""><%= profile.role  %></td>
              <td class="uk-text-center">
                <%= link_to '<i class="md-icon material-icons">&#xE254;</i>'.html_safe , edit_admin_profile_path(profile)%>
              </td>
            </tr>
            <% end %>
          <% end %>

        </tbody>
      </table>
      <%= paginate @admin_profiles unless params[:major] %>
    </div>
  </div>
  <div class="md-fab-wrapper">
    <a class="md-fab md-fab-accent md-fab-wave-light waves-effect waves-button waves-light" href="/admin/profiles/new<%= '?major=true ' if params[:major]%>" id="invoice_add">
      <i class="material-icons">î……</i>
    </a>
  </div>
</div>
