<div class="md-card uk-margin-medium-bottom">
    <div class="md-card-content">
        <div class="uk-overflow-container">
            <table class="uk-table uk-table-nowrap table_check">
                <thead>
                <tr>
                    <th class="uk-width-1-10">Promo Title</th>
                    <th class="uk-width-1-10 uk-text-center">Promo Discount</th>
                    <th class="uk-width-1-10 uk-text-center">Promo Original Price</th>
                    <th class="uk-width-1-10 uk-text-center">Promo Discounted Price</th>
                    <th class="uk-width-1-10 uk-text-center">Promo Merchant</th>
                    <th class="uk-width-1-10 uk-text-center">Promo Approval</th>
                    <th class="uk-width-1-10 uk-text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                    <% @admin_promos.each do  |promo|%>
                    <tr>

                        <td class=""><%= truncate(promo.title, length: 25, omission: '...') %></td>
                        <td class="uk-text-center"><%= promo.discount%></td>
                        <td class="uk-text-center"><%= promo.original_price%></td>
                        <td class="uk-text-center"><%= promo.discount_price%></td>
                        <td class="uk-text-center"><%= promo.merchant.name%></td>
                        <td class="uk-text-center"><%= promo.approval%></td>
                        <td class="uk-text-center">
                            <%= link_to '<i class="md-icon material-icons">&#xE254;</i>'.html_safe , edit_admin_promo_path(promo)%>


                        </td>
                    </tr>
                    <% end %>

                </tbody>
            </table>
        </div>
    </div>
    <div class="md-fab-wrapper">
        <a class="md-fab md-fab-accent md-fab-wave-light waves-effect waves-button waves-light" href="/admin/promos/new" id="invoice_add">
            <i class="material-icons">î……</i>
        </a>
    </div>
</div>
