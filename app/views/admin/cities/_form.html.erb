<div class="md-card">
  <div class="md-card-content">
    <%= form_for(@city, url: (@city.new_record? ? admin_cities_path(@city) : admin_city_path(@city)), multipart: true) do |f| %>
    <% if @city.errors.any? %>
    <div id="error_explanation">
      <h2>Qualcosa è andato storto durante il salvataggio dei dati</h2>
      <ul>
        <% @city.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <h2 class=" ">
      <% if @city.new_record?%>
      Aggiungi <%= @city.class.name %>
      <% else %>
      Gestisci <%= @city.name %>
      <% end %>
    </h2>
    <div class="uk-grid" data-uk-grid-margin>
      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Titolo</label>
              <%= f.text_field :name, class: 'md-input', required: true %>
            </div>
          </div>
        </div>
      </div>
      <!-- <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Description</label>
              <%= f.text_area :description, class: 'md-input', required: true %>
            </div>
          </div>
        </div>
      </div> -->

      <div class="uk-width-medium-1-5 uk-grid-margin">
        <div class="md-input-wrapper">
          <h3 class="  uk-margin-small-bottom">Home</h3>
          <div class="dropzone" data-ajax="false" data-originalsize="true" data-editstart="false" data-image="<%= f.object.photo.url%>" data-canvas="false" style="width: 200px; height: 400px;" >
            <%= f.file_field :photo, required: true%>
          </div>
        </div>
      </div>
      <div class="uk-width-medium-1-5 uk-grid-margin">
        <div class="md-input-wrapper">
          <h3 class="  uk-margin-small-bottom">Scopri</h3>
          <%= f.fields_for :discover do |ff| %>
          <div class="dropzone" data-ajax=false data-canvas="false" data-originalsize="true" data-editstart="false"  data-image="<%= ff.object.photo.url%>" style="width: 200px; height: 400px;" >
            <%= ff.file_field :photo, required: true%>
          </div>
          <% end %>
        </div>
      </div>
      <div class="uk-width-medium-1-5 uk-grid-margin">
        <div class="md-input-wrapper">
          <h3 class="  uk-margin-small-bottom">Intorno</h3>
          <%= f.fields_for :around do |fff| %>
          <div class="dropzone" data-originalsize="false" data-canvas="false" data-ajax="false"  data-image="<%= fff.object.photo.url%>" style="width: 200px; height: 400px;">
            <%= fff.file_field :photo, required: true%>
          </div>
          <% end %>
        </div>
      </div>
      <div class="uk-width-medium-1-5 uk-grid-margin">
        <div class="md-input-wrapper">
          <h3 class="  uk-margin-small-bottom">Comune</h3>
          <%= f.fields_for :commonplace do |ffff| %>
          <div class="dropzone" data-originalsize="true"  data-image="<%= ffff.object.photo.url%>" style="width: 200px; height: 400px;" data-canvas="false" data-ajax="false">
            <%= ffff.file_field :photo, required: true%>
          </div>
        </div>
        <% end %>
      </div>
      <div class="uk-width-medium-1-5 uk-grid-margin">
        <div class="md-input-wrapper">
          <h3 class="  uk-margin-small-bottom">Utilità</h3>
          <%= f.fields_for :utility do |fffff| %>
          <div class="dropzone" data-originalsize="true"  data-image="<%= fffff.object.photo.url%>" style="width: 200px; height: 400px;" data-canvas="false" data-ajax="false">
            <%= fffff.file_field :photo, required: true%>
          </div>
          <% end %>
        </div>
        <div class="md-fab-wrapper">
          <%= button_tag(type: 'submit' , class: 'md-fab md-fab-accent md-fab-wave waves-effect waves-button') do %>
          <i class="fa fa-floppy-o" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
