<div class="md-card">
  <div class="md-card-content">
    <%= form_for(@city, url: (@city.new_record? ? admin_cities_path(@city) : admin_city_path(@city)), multipart: true) do |f| %>
    <% if @city.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@city.errors.count, "error") %> prohibited this admin_category from being saved:</h2>

      <ul>
        <% @city.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <h3 class="heading_a">
      <% if @city.new_record?%>
      New <%= @city.class.name %>
      <% else %>
      Edit <%= @city.name %>
      <% end %>
    </h3>
    <div class="uk-grid" data-uk-grid-margin>


      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Title</label>
              <%= f.text_field :name, class: 'md-input', required: true %>
            </div>
          </div>
        </div>
      </div>
      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Description</label>
              <%= f.text_area :description, class: 'md-input', required: true %>
            </div>
          </div>
        </div>
      </div>

      <div class="uk-width-medium-1-5 uk-grid-margin">
        <div class="md-input-wrapper">
          <h3 class="heading_a uk-margin-small-bottom">City Photo</h3>
          <%= f.file_field :photo, class: 'dropify ', 'data-default-file' => @city.photo, 'data-allowed-formats':"portrait square" , 'data-errors-position': "outside"   %>
        </div>
      </div>
      <div class="uk-width-medium-1-5 uk-grid-margin">
        <div class="md-input-wrapper">
          <h3 class="heading_a uk-margin-small-bottom">Scopri Photo</h3>
          <%= f.fields_for :discover do |ff| %>
          <%= ff.file_field :photo, class: 'dropify ', 'data-default-file' => @discover.photo, 'data-errors-position': "outside" %>
          <% end %>
        </div>
      </div>
      <div class="uk-width-medium-1-5 uk-grid-margin">
        <div class="md-input-wrapper">
          <h3 class="heading_a uk-margin-small-bottom">Intorno Photo</h3>
          <%= f.fields_for :around do |fff| %>
          <%= fff.file_field :photo, class: 'dropify ', 'data-default-file' => @around.photo,  'data-errors-position': "outside"   %>
          <% end %>
        </div>
      </div>
      <div class="uk-width-medium-1-5 uk-grid-margin">
        <div class="md-input-wrapper">
          <h3 class="heading_a uk-margin-small-bottom">Comune Photo</h3>
          <%= f.fields_for :commonplace do |ffff| %>
          <%= ffff.file_field :photo, class: 'dropify ', 'data-default-file' => @commonplace.photo,  'data-errors-position': "outside"   %>
        </div>
        <% end %>
      </div>
      <div class="uk-width-medium-1-5 uk-grid-margin">
        <div class="md-input-wrapper">
          <h3 class="heading_a uk-margin-small-bottom">Utilita Photo</h3>
          <%= f.fields_for :utility do |fffff| %>
          <%= fffff.file_field :photo, class: 'dropify ', 'data-default-file' => @utility.photo,   'data-errors-position': "outside"  %>
          <% end %>
        </div>
        <div class="md-input-wrapper">
          <%= f.submit class: "md-btn default-submit"%>
        </div>
      </div>
    </div>
    <div class="uk-width-medium-1-1">
      <div class="uk-form-row">
        <div class="uk-grid" data-uk-grid-margin>
          <div class="uk-width-medium-1-2">

          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
