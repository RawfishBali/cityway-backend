<div class="md-card">
  <div class="md-card-content">
    <%= form_for(@city, url: (@city.new_record? ? admin_cities_path(@city) : admin_city_path(@city)), multipart: true) do |f| %>
    <% if @city.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@city.errors.count, "error") %> prohibited this admin_category from being saved:</h2>

      <ul>
        <% @city.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <h3 class="heading_a">
      <% if @city.new_record?%>
      New <%= @city.class.name %>
      <% else %>
      Edit <%= @city.name %>
      <% end %>
    </h3>
    <div class="uk-grid" data-uk-grid-margin>


      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Title</label>
              <%= f.text_field :name, class: 'md-input', required: true %>
            </div>
          </div>
        </div>
      </div>

      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Photo</label>
              <%= f.file_field :photo, class: 'dropify ', 'data-default-file' => @city.photo, 'data-allowed-formats':"portrait square" , 'data-errors-position': "outside", value: @city.photo  %>
            </div>
          </div>
        </div>
      </div>

    </div>
    <div class="uk-width-medium-1-1">
      <div class="uk-form-row">
        <div class="uk-grid" data-uk-grid-margin>
          <div class="uk-width-medium-1-2">
            <%= f.submit class: "md-btn default-submit"%>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
