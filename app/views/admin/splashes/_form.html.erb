<div class="md-card">
  <div class="md-card-content">
    <%= form_for(@admin_splash, url: (@admin_splash.new_record? ? admin_splashes_path(@admin_splash) : admin_splash_path(@admin_splash)), multipart: true) do |f| %>
    <% if @admin_splash.errors.any? %>
    <div id="error_explanation">
      <h2>Qualcosa è andato storto durante il salvataggio dei dati</h2>

      <ul>
        <% @admin_splash.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <h3 class=" ">
      <% if @admin_splash.new_record?%>
      Aggiungi <%= @admin_splash.class.name %>
      <% else %>
      Gestisci <%= @admin_splash.name %>
      <% end %>
    </h3>
    <div class="uk-grid" data-uk-grid-margin>

      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <div class="uk-form-row">
                <div id="photos">
                  <h2>Foto</h2>
                  <%= f.fields_for :photos do |photo| %>
                  <%= render 'photo_fields', f: photo %>
                  <% end %>
                  <div class="links">
                    <%= link_to_add_association '<i class="material-icons md-24"></i>'.html_safe, f, :photos %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
            </div>
            <div class="uk-width-medium-1-2">
              <label></label>
              <%= f.submit class: "md-btn default-submit"%>
            </div>
          </div>
        </div>
      </div>

    </div>

    <% end %>
  </div>
</div>
