<div class="md-card uk-margin-medium-bottom">
    <div class="md-card-content">
        <div class="uk-overflow-container">
            <table class="uk-table uk-table-nowrap table_check">
                <thead>
                <tr>
                    <th class="uk-width-1-10">Foto</th>
                    <th class="uk-width-1-10 uk-text-center">Azioni</th>
                </tr>
                </thead>
                <tbody>
                    <% @admin_splashes.each do  |splash|%>
                    <tr>

                        <td class="">
                          <% splash.photos.each do |photo| %>
                            <%= image_tag photo.picture.url, class: 'width100pixel' %>
                          <% end %>
                        </td>
                        <td class="uk-text-center">
                            <%= link_to '<i class="md-icon material-icons">&#xE254;</i>'.html_safe , edit_admin_splash_path(splash)%>
                        </td>
                    </tr>
                    <% end %>

                </tbody>
            </table>
        </div>

    </div>
    <div class="md-fab-wrapper">
        <a class="md-fab md-fab-accent md-fab-wave-light waves-effect waves-button waves-light" href="/admin/splashes/new" id="invoice_add">
            <i class="material-icons">î……</i>
        </a>
    </div>
</div>
