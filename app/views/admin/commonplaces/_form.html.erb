<div class="md-card">
  <div class="md-card-content">
    <%= form_for(@commonplace, url: (@commonplace.new_record? ? admin_commonplaces_path(@commonplace) : admin_commonplace_path(@commonplace)), multipart: true) do |f| %>
    <% if @commonplace.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@commonplace.errors.count, "error") %> prohibited this admin_category from being saved:</h2>

      <ul>
        <% @commonplace.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <h2 class=" ">
      <% if @commonplace.new_record?%>
      New Social Links
      <% else %>
      Edit Social Links
      <% end %>
    </h2>
    <div class="uk-grid" data-uk-grid-margin>
      <div class="uk-width-medium-1-2">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Facebook</label>
              <%= f.text_field :facebook,class: 'md-input'  %>
            </div>
          </div>
        </div>
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Instagram</label>
              <%= f.text_field :instagram,class: 'md-input'  %>
            </div>
          </div>
        </div>
      </div>
      <div class="uk-width-medium-1-2 ">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Twitter</label>
              <%= f.text_field :twitter,class: 'md-input'  %>
            </div>
          </div>
        </div>
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Google Plus</label>
              <%= f.text_field :google_plus,class: 'md-input'  %>
            </div>
          </div>
        </div>
      </div>
      <div class="uk-width-medium-1-2 ">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <h3 class="  uk-margin-small-bottom">Icona Comune</h3>
              <div class="dropzone" data-width="222"  data-image="<%= f.object.icon.url %>"  data-height="300"  data-editstart="false" data-ajax="false" data-canvas="true" >
                <%= f.file_field :icon%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="md-fab-wrapper">
      <%= button_tag(type: 'submit' , class: 'md-fab md-fab-accent md-fab-wave waves-effect waves-button') do %>
        <i class="fa fa-floppy-o" aria-hidden="true"></i>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
