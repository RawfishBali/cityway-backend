<div class="md-card">
  <div class="md-card-content">
    <%= form_for(@admin_public_office, url: (@admin_public_office.new_record? ? admin_public_offices_path(@admin_public_office) : admin_public_office_path(@admin_public_office)), multipart: true) do |f| %>
    <% if @admin_public_office.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_public_office.errors.count, "error") %> prohibited this admin_category from being saved:</h2>
      <ul>
        <% @admin_public_office.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <h2 class=" ">
      <% if @admin_public_office.new_record?%>
      Aggiungi <%= @admin_public_office.class.name %>
      <% else %>
      Gestisci <%= @admin_public_office.name %>
      <% end %>
      <%= link_to '<i class="fa fa-arrow-circle-left fa-2x" aria-hidden="true"></i>'.html_safe, :back, class:'float-right' %>
    </h2>
    <div class="uk-grid" data-uk-grid-margin>
      <%= f.hidden_field :commonplace_id , value: @commonplace_id %>

      <div class="uk-width-medium-1-2">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Nome</label>
              <%= f.text_field :name,class: 'md-input'  %>
            </div>
          </div>
        </div>
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Indirizzo</label>
              <%= f.text_field :address,class: 'md-input'  %>
            </div>
          </div>
        </div>
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Descrizione</label>
              <%= f.text_area :description,class: 'md-input'  %>
            </div>
          </div>
        </div>
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Email</label>
              <%= f.text_field :email,class: 'md-input'  %>
            </div>
          </div>
        </div>
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Website</label>
              <%= f.text_field :website, required: true,class: 'md-input'  %>
            </div>
          </div>
        </div>
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Telefono</label>
              <%= f.text_field :phone,class: 'md-input'  %>
            </div>
          </div>
        </div>
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Fax</label>
              <%= f.text_field :fax,class: 'md-input'  %>
            </div>
          </div>
        </div>
      </div>
      <div class="uk-width-medium-1-2 marginTM50">
        <div class="uk-form-row">
          <div id="subcategories">
            <h3>Orari</h3>
            <%= f.fields_for :business_hours do |business_hour| %>
            <%= render 'business_hour_fields', f: business_hour %>
            <% end %>
            <div class="links">
              <%= link_to_add_association '<i class="material-icons md-24"></i>'.html_safe, f, :business_hours %>
            </div>
          </div>
        </div>
        <div class="uk-form-row">
          <div id="photos">
            <h3>Foto</h3>
            <%= f.fields_for :photos do |photo| %>
            <%= render 'photo_fields', f: photo %>
            <% end %>
            <div class="links">
              <%= link_to_add_association '<i class="material-icons md-24"></i>'.html_safe, f, :photos %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="md-fab-wrapper">
      <%= button_tag(type: 'submit' , class: 'md-fab md-fab-accent md-fab-wave waves-effect waves-button') do %>
      <i class="fa fa-floppy-o" aria-hidden="true"></i>
      <% end %>
    </div>
    <% end %>
  </div>
