<div class="md-card uk-margin-medium-bottom">
    <div class="md-card-content">
        <div class="uk-overflow-container">
            <table class="uk-table uk-table-nowrap table_check">
                <thead>
                <tr>
                    <th class="uk-width-1-10">Name</th>
                    <th class="uk-width-1-10 uk-text-center">Address</th>
                    <th class="uk-width-1-10 uk-text-center">Description</th>
                    <th class="uk-width-1-10 uk-text-center">Photo</th>
                    <th class="uk-width-1-10 uk-text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                    <% @admin_public_offices.each do  |public_offices|%>
                    <tr>
                        <td class=""><%= public_offices.name  %></td>
                        <td class="uk-text-center"><%= public_offices.address %></td>
                        <td class="uk-text-center"><%= truncate(public_offices.description, length: 25, omission: '...') %></td>
                        <td class="uk-text-center"><%= image_tag public_offices.primary_photo.first.picture.url, class: 'width100pixel' unless public_offices.primary_photo.first.blank?  %></td>

                        <td class="uk-text-center">
                            <%= link_to '<i class="md-icon material-icons">&#xE254;</i>'.html_safe , edit_admin_public_office_path(public_offices)%>
                            <%= link_to '<i class="md-icon material-icons ">&#xE872;</i>'.html_safe, admin_public_office_path(public_offices), method: :delete , :data => {:confirm => 'Sei sicuro?'} %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <%= paginate @admin_public_offices %>
        </div>
    </div>
    <div class="md-fab-wrapper">
        <a class="md-fab md-fab-accent md-fab-wave-light waves-effect waves-button waves-light" href="/admin/public_offices/new" id="invoice_add">
            <i class="material-icons">î……</i>
        </a>
    </div>
</div>
