<h1>Gestisci Sicurezza</h1>
<div class="md-card uk-margin-medium-bottom">
    <div class="md-card-content">
        <div class="uk-overflow-container">
            <table class="uk-table uk-table-nowrap table_check">
                <thead>
                <tr>
                    <th class="uk-width-1-10">Nome</th>
                    <th class="uk-width-1-10 uk-text-center">Url</th>
                    <th class="uk-width-1-10 uk-text-center">Azioni</th>
                </tr>
                </thead>
                <tbody>
                    <% @admin_securities.each do  |security|%>
                    <tr>
                        <td class=""><%= security.name  %></td>
                        <td class="uk-text-center"><%= security.url %></td>
                        <td class="uk-text-center">
                            <%= link_to '<i class="md-icon material-icons">&#xE254;</i>'.html_safe , edit_admin_security_path(security)%>
                            <%= link_to '<i class="md-icon material-icons ">&#xE872;</i>'.html_safe, admin_security_path(security), method: :delete , :data => {:confirm => 'Sei sicuro di voler cancellare?'} %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <%= paginate @admin_securities %>
        </div>
    </div>
    <div class="md-fab-wrapper">
        <a class="md-fab md-fab-accent md-fab-wave-light waves-effect waves-button waves-light" href="/admin/securities/new" id="invoice_add">
            <i class="material-icons">î……</i>
        </a>
    </div>
</div>
