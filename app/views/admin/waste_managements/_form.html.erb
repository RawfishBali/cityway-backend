<div class="md-card">
  <div class="md-card-content">
    <%= form_for(@admin_waste_management, url: (@admin_waste_management.new_record? ? admin_waste_managements_path(@admin_waste_management) : admin_waste_management_path(@admin_waste_management)), multipart: true) do |f| %>
    <% if @admin_waste_management.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_waste_management.errors.count, "error") %> Questa categoria non può essere salvata:</h2>

      <ul>
        <% @admin_waste_management.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <h2 class=" ">
      <% if @admin_waste_management.new_record?%>
      Aggiungi <%= @admin_waste_management.class.name %>
      <% else %>
      Gestisci <%= @admin_waste_management.name %>
      <% end %>
      <%= link_to '<i class="fa fa-arrow-circle-left fa-2x" aria-hidden="true"></i>'.html_safe, :back, class:'float-right' %>
    </h2>

    <div class="uk-grid" data-uk-grid-margin>
      <div class="uk-width-medium-1-2">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Nome</label>
              <%= f.text_field :name,class: 'md-input', required: true  %>
            </div>
          </div>
        </div>
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Indirizzo</label>
              <%= f.text_field :address,class: 'md-input', required: true  %>
            </div>
          </div>
        </div>
      </div>

      <div class="uk-width-medium-1-2">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Email</label>
              <%= f.text_field :email,class: 'md-input' %>
            </div>
          </div>
        </div>
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Telefono</label>
              <%= f.text_field :phone,class: 'md-input'  %>
            </div>
          </div>
        </div>
      </div>

      <div class="uk-width-medium-1-2">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Website</label>
              <%= f.text_field :website,class: 'md-input' %>
            </div>
          </div>
        </div>
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Descrizioni</label>
              <%= f.text_area :description,class: 'md-input'  %>
            </div>
          </div>
        </div>
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Domestico</label>
              <%= f.check_box :is_domestic,class: 'md-input data-md-icheck'  %>
            </div>
          </div>
        </div>
      </div>

      <div class="uk-width-medium-1-2">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <div id="waste_pickup_schedules">
                <h3>Orario Ritiro</h3>
                <%= f.fields_for :waste_pickup_schedules do |waste_pickup_schedule| %>
                <%= render 'waste_pickup_schedule_fields', f: waste_pickup_schedule %>
                <% end %>
                <div class="links">
                  <%= link_to_add_association '<i class="material-icons md-24"></i>'.html_safe, f, :waste_pickup_schedules %>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>


    </div>
  </div>
  <div class="md-fab-wrapper">
    <%= button_tag(type: 'submit' , class: 'md-fab md-fab-accent md-fab-wave waves-effect waves-button') do %>
    <i class="fa fa-floppy-o" aria-hidden="true"></i>
    <% end %>
  </div>

  <% end %>

</div>
