<div class="md-card">
  <div class="md-card-content">
    <%= form_for(@admin_online_service, url: (@admin_online_service.new_record? ? admin_online_services_path(@admin_online_service) : admin_online_service_path(@admin_online_service)), multipart: true) do |f| %>
    <% if @admin_online_service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_online_service.errors.count, "error") %> Questa categoria non pu√≤ essere salvata:</h2>

      <ul>
        <% @admin_online_service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <h2 class=" ">
      <% if @admin_online_service.new_record?%>
      Aggiungi <%= @admin_online_service.class.name %>
      <% else %>
      Gestisci <%= @admin_online_service.name %>
      <% end %>
      <%= link_to '<i class="fa fa-arrow-circle-left fa-2x" aria-hidden="true"></i>'.html_safe, :back, class:'float-right' %>
    </h2>
    <div class="uk-grid" data-uk-grid-margin>
      <%= f.hidden_field :commonplace_id , value: @commonplace_id %>

      <div class="uk-width-medium-1-2">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Nome</label>
              <%= f.text_field :name,class: 'md-input', required: true  %>
            </div>
          </div>
        </div>
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Url</label>
              <%= f.text_field :url,class: 'md-input', required: true  %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="md-fab-wrapper">
      <%= button_tag(type: 'submit' , class: 'md-fab md-fab-accent md-fab-wave waves-effect waves-button') do %>
      <i class="fa fa-floppy-o" aria-hidden="true"></i>
      <% end %>
    </div>
    <% end %>
  </div>
