<div class="md-card uk-margin-medium-bottom">
    <div class="md-card-content">
        <div class="uk-overflow-container">
            <table class="uk-table uk-table-nowrap table_check">
                <thead>
                <tr>
                    <th class="uk-width-1-10">Name</th>
                    <th class="uk-width-1-10">Description</th>
                    <th class="uk-width-2-10 uk-text-center">Photo</th>
                    <th class="uk-width-2-10">Actions</th>
                </tr>
                </thead>
                <tbody>
                    <% @admin_itineraries.each do  |itinerary|%>
                    <tr>
                        <td ><%= itinerary.name %></td>
                        <td ><%= truncate(itinerary.description, length: 25, omission: '...') %></td>
                        <td><%= image_tag itinerary.primary_photo.first.picture.url %></td>


                        <td class="">
                            <%= link_to '<i class="md-icon material-icons">&#xE254;</i>'.html_safe , edit_admin_itinerary_path(itinerary)%>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <%= paginate @admin_itineraries %>
        </div>
    </div>
    <div class="md-fab-wrapper">
        <a class="md-fab md-fab-accent md-fab-wave-light waves-effect waves-button waves-light" href="/admin/itineraries/new" id="invoice_add">
            <i class="material-icons">î……</i>
        </a>
    </div>
</div>
