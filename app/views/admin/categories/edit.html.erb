<div class="md-card">
  <div class="md-card-content">
    <%= form_for(@admin_category, url: (@admin_category.new_record? ? admin_categories_path(@admin_category) : admin_category_path(@admin_category)), multipart: true) do |f| %>
    <% if @admin_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_category.errors.count, "error") %> prohibited this admin_category from being saved:</h2>

      <ul>
        <% @admin_category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>


    <h3 class="heading_a">Edit <%= @admin_category.name %></h3>
    <div class="uk-grid" data-uk-grid-margin>

      <div class="uk-width-medium-1-2">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Category Name</label>
              <%= f.text_field :name, required: true,class: 'md-input'  %>
            </div>
          </div>
        </div>

        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Category Icon</label>
              <%= f.file_field :icon, class: 'dropify ', 'data-default-file' => @admin_category.icon, 'data-allowed-formats':"portrait square" , 'data-errors-position': "outside" , 'data-height':"100" %>
            </div>
          </div>
        </div>

        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Category Photo</label>
              <%= f.file_field :photo, class: 'dropify ', 'data-default-file' => @admin_category.photo, 'data-allowed-formats':"portrait square" , 'data-errors-position': "outside" , 'data-height':"150" %>
            </div>
          </div>
        </div>

        <div class="uk-form-row">
          <div id="subcategories">
            <%= f.fields_for :subcategories do |subcategory| %>
              <%= render 'subcategory_fields', f: subcategory %>
            <% end %>
            <div class="links">
              <%= link_to_add_association '<i class="material-icons md-24">î…†</i>'.html_safe, f, :subcategories %>
            </div>
          </div>
        </div>



      </div>
    </div>
    <div class="uk-grid" data-uk-grid-margin>
      <div class="uk-width-medium-1-2">
        <div class="uk-form-row">
          <%= f.submit class: "md-btn"%>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
