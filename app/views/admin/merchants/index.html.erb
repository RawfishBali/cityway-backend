<div class="md-card uk-margin-medium-bottom">
    <div class="md-card-content">
        <div class="uk-overflow-container">
            <table class="uk-table uk-table-nowrap table_check">
                <thead>
                <tr>
                    <th class="uk-width-1-10">Name</th>
                    <th class="uk-width-1-10">Address</th>
                    <th class="uk-width-1-10 uk-text-center">Icon</th>
                    <th class="uk-width-1-10 uk-text-center">Photo</th>
                    <th class="uk-width-1-10 uk-text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                    <% @admin_merchants.each do  |merchant|%>
                    <tr>

                        <td><%= merchant.name %></td>
                        <td><%= merchant.address %></td>
                        <td class="uk-text-center"><%= image_tag merchant.icon.url unless merchant.icon.blank? %></td>
                        <td class="uk-text-center"><%= image_tag merchant.primary_photo.first.picture.url unless merchant.primary_photo.first.blank? %></td>
                        <td class="uk-text-center">
                            <%= link_to '<i class="md-icon material-icons">&#xE254;</i>'.html_safe , edit_admin_merchant_path(merchant)%>


                        </td>
                    </tr>
                    <% end %>

                </tbody>
            </table>
            <%= paginate @admin_merchants %>
        </div>
    </div>
    <div class="md-fab-wrapper">
        <a class="md-fab md-fab-accent md-fab-wave-light waves-effect waves-button waves-light" href="/admin/merchants/new" id="invoice_add">
            <i class="material-icons">î……</i>
        </a>
    </div>
</div>
