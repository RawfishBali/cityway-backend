<div class="nested-fields">
  <div class="uk-grid" data-uk-grid-margin>
    <div class="uk-width-large-1-2 uk-width-1-1">
      <div class="uk-width-medium-1-1 uk-row-first">
        <div class="dropzone" data-height="207" data-width="750"  data-ghost="false" data-canvas="false" data-image="<%= f.object.photo.url %>" data-originalsize="false" data-url="/" data-editstart="false" data-ajax="false", data-save="false" data-canvas="false">
          <%= f.file_field :photo%>
        </div>
      </div>

    </div>
    <div class="uk-width-large-1-2 uk-width-1-1">
      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Nome</label>
              <%= f.text_field :name,class: 'md-input'  %>
            </div>
          </div>
        </div>
      </div>

      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Ruolo</label>
              <%= f.text_field :role, class: 'md-input'%>
            </div>
          </div>
        </div>
      </div>



      <div class="uk-width-medium-1-1 uk-row-first">
        <div class="md-input-wrapper text-align-right">
          <%= link_to_remove_association '<i class="material-icons md-24 ">î¡²</i>'.html_safe, f, {class: 'btnSectionRemove'} %>
        </div>
      </div>
    </div>
  </div>
</div>
