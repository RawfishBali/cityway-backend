<h1>
  Gestisci Parcheggi
</h1>


<div class="md-card uk-margin-medium-bottom marginT30">
  <div class="md-card-content">
    <div class="uk-overflow-container">
      <table class="uk-table uk-table-nowrap table_check">
        <thead>
          <tr>
            <th class="uk-width-1-10">Nome</th>
            <th class="uk-width-1-10">Indirizzo</th>
            <th class="uk-width-1-10 uk-text-center">Foto</th>
            <th class="uk-width-1-10 uk-text-center">Azioni</th>
          </tr>
        </thead>
        <tbody>
          <% @admin_parking_lots.each do  |merchant|%>
          <tr>
            <td><%= merchant.name %></td>
            <td><%= merchant.address %></td>
            <td class="uk-text-center"><%= image_tag merchant.primary_photo.first.picture.url, class: 'width100pixel' unless merchant.primary_photo.first.blank? %></td>
            <td class="uk-text-center">
              <%= link_to '<i class="md-icon material-icons">&#xE254;</i>'.html_safe , edit_admin_parking_lot_path(merchant)%>
              <%= link_to '<i class="md-icon material-icons ">&#xE872;</i>'.html_safe, admin_parking_lot_path(merchant), method: :delete , :data => {:confirm => 'Sei sicuro di voler cancellare?'} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @admin_parking_lots %>
    </div>
  </div>
  <div class="md-fab-wrapper">
    <a class="md-fab md-fab-accent md-fab-wave-light waves-effect waves-button waves-light" href="/admin/parking_lots/new" id="invoice_add">
      <i class="material-icons">î……</i>
    </a>
  </div>
</div>
