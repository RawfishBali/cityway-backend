<div class="md-card">
  <div class="md-card-content">
    <%= form_for(@admin_parking_lot, url: (@admin_parking_lot.new_record? ? admin_parking_lots_path(@admin_parking_lot) : admin_parking_lot_path(@admin_parking_lot)), multipart: true) do |f| %>
    <% if @admin_parking_lot.errors.any? %>
    <div id="error_explanation">
      <h2>Qualcosa è andato storto durante il salvataggio dei dati</h2>

      <h2><%= t('errors.messages.not_saved', count: @admin_parking_lot.errors.count) %></h2>
      <ul>
        <% @admin_parking_lot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <h2 class=" ">
      <div class="uk-width-medium-1-2 uk-row-first">
        Gestisci Parcheggi
        <span class="marginL170">
          <%= check_box_tag :sport_map_toggle, false,{},{class: 'float-right ', 'data-switchery': true, 'data-switchery-size':"large"}  %>
          <span id="switchery_active_text">Map</span>
        </span>
      </div>

      <%= link_to '<i class="fa fa-arrow-circle-left fa-2x" aria-hidden="true"></i>'.html_safe, admin_parking_lots_path, class:'float-right marginTM40' %>
    </h2>


    <div class="uk-grid" data-uk-grid-margin>
      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Nome</label>
              <%= f.text_field :name, required: true,class: 'md-input'  %>
            </div>
            <div class="uk-width-medium-1-2">
              <label>Indirizzo</label>
              <%= f.text_field :address, required: true,class: 'md-input addressable'  %>
            </div>
          </div>
        </div>
      </div>
      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <div id="parking_lot_map" class="not-basic"></div>
            </div>
            <div class="uk-width-medium-1-2">
              <label class='not-basic'>Latitude</label>
              <%= f.text_field :latitude, required: true,class: 'md-input not-basic'  %>
              <label class='not-basic'>Longitude</label>
              <%= f.text_field :longitude, required: true,class: 'md-input not-basic'  %>
            </div>
          </div>
        </div>
      </div>



      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Posti Liberi</label>
              <%= f.text_field :available_parking_lot,class: 'md-input' %>
            </div>
            <div class="uk-width-medium-1-2">
              <label>Totale Posti</label>
              <%= f.text_field :total_parking_lot,class: 'md-input', required: true %>
            </div>
          </div>
        </div>
      </div>
      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Cellulare</label>
              <%= f.text_field :phone, required: true,class: 'md-input'  %>
            </div>
            <div class="uk-width-medium-1-2">
              <label>Fisso</label>
              <%= f.text_field :phone_1,class: 'md-input'  %>
            </div>
          </div>
        </div>
      </div>

      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
            </div>
            <div class="uk-width-medium-1-2">
              <label>Telefono Verde</label>
              <%= f.text_field :phone_2,class: 'md-input'  %>
            </div>
          </div>
        </div>
      </div>


      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Facebook</label>
              <%= f.text_field :facebook,class: 'md-input'  %>
            </div>
            <div class="uk-width-medium-1-2">
              <label>Instagram</label>
              <%= f.text_field :instagram,class: 'md-input'  %>
            </div>
          </div>
        </div>
      </div>
      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Twitter</label>
              <%= f.text_field :twitter,class: 'md-input'  %>
            </div>
            <div class="uk-width-medium-1-2">
              <label>Google+</label>
              <%= f.text_field :google_plus,class: 'md-input'  %>
            </div>
          </div>
        </div>
      </div>


      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Email</label>
              <%= f.text_field :email,class: 'md-input'  %>
            </div>
            <div class="uk-width-medium-1-2">
              <%= f.label :support_disabilities, 'Città Accessibile', class: 'inline-label'%>
              <%= f.check_box :support_disabilities,class: 'md-input', 'data-switchery': true  %>
            </div>
          </div>
        </div>
      </div>


      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2">
              <label>Website</label>
              <%= f.text_field :website,class: 'md-input'  %>
            </div>
            <div class="uk-width-medium-1-2">

            </div>

          </div>
        </div>
      </div>


      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>

            <div class="uk-width-medium-1-2 not-basic">
              <label>Descrizione</label>
              <%= f.text_area :description,class: 'md-input'  %>
            </div>
            <div class="uk-width-medium-1-2">

            </div>
          </div>
        </div>
      </div>

      <div class="uk-width-medium-1-1">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-2 not-basic">
              <div id="subcategories" >
                <h3>Orari</h3>
                <%= f.label :open_all_day, 'Sempre Aperto', class: 'inline-label'%>
                <%= f.check_box :open_all_day,class: 'md-input', 'data-switchery': true  %>
                <%= f.fields_for :business_hours do |business_hour| %>
                <%= render 'business_hour_fields', f: business_hour %>
                <% end %>
                <div class="links">
                  <%= link_to_add_association '<i class="material-icons md-24"></i>'.html_safe, f, :business_hours %>
                </div>
              </div>
            </div>
            <div class="uk-width-medium-1-2">
              <div class="uk-form-row">
                <div id="photos">
                  <h3>Foto</h3>
                  <%= f.fields_for :photos do |photo| %>
                  <%= render 'photo_fields', f: photo %>
                  <% end %>
                  <div class="links">
                    <%= link_to_add_association '<i class="material-icons md-24"></i>'.html_safe, f, :photos %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="md-fab-wrapper">
    <%= button_tag(type: 'submit' , class: 'md-fab md-fab-accent md-fab-wave waves-effect waves-button') do %>
    <i class="fa fa-floppy-o" aria-hidden="true"></i>
    <% end %>
  </div>
  <% end %>

</div>
