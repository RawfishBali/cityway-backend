<div class="md-card uk-margin-medium-bottom">
  <div class="md-card-content">
    <div class="uk-overflow-container">
      <table class="uk-table uk-table-nowrap table_check">
        <thead>
          <tr>
            <th class="uk-width-1-10">Name</th>
            <th class="uk-width-1-10 uk-text-center">Url</th>
            <th class="uk-width-1-10 uk-text-center">Address</th>
            <th class="uk-width-1-10 uk-text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @admin_devices.each do  |device|%>
          <tr>
            <td class=""><%= device.name  %></td>
            <td class="uk-text-center"><%= device.external_url %></td>
            <td class="uk-text-center"><%= device.address %></td>
            <td class="uk-text-center">
              <%= link_to '<i class="md-icon material-icons">&#xE254;</i>'.html_safe , edit_admin_device_path(device, device_type: device.device_type)%>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @admin_devices %>
    </div>
  </div>
  <div class="md-fab-wrapper">
    <a class="md-fab md-fab-accent md-fab-wave-light waves-effect waves-button waves-light" href="/admin/devices/new?device_type=<%= params[:device_type]%>" id="invoice_add">
      <i class="material-icons">î……</i>
    </a>
  </div>
</div>
