<div class="md-card">
  <div class="md-card-content">
    <%= form_for(@admin_device, url: (@admin_device.new_record? ? admin_devices_path(@admin_device) : admin_device_path(@admin_device)), multipart: true) do |f| %>
    <% if @admin_device.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_device.errors.count, "error") %> prohibited this admin_category from being saved:</h2>

      <ul>
        <% @admin_device.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <h2 class=" ">
      <% if @admin_device.new_record?%>
      New <%= @admin_device.class.name %>
      <% else %>
      Edit <%= @admin_device.name %>
      <% end %>
      <%= link_to '<i class="fa fa-arrow-circle-left fa-2x" aria-hidden="true"></i>'.html_safe, :back, class:'float-right' %>
    </h2>
    <div class="uk-grid" data-uk-grid-margin>
      <%= f.hidden_field :utility_id , value: @utility_id %>
      <%= f.hidden_field :device_type , value: @device_type %>

      <div class="uk-width-medium-1-2">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>name</label>
              <%= f.text_field :name,class: 'md-input', required: true  %>
            </div>
          </div>
        </div>
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>External Url</label>
              <%= f.text_field :external_url,class: 'md-input', required: true  %>
            </div>
          </div>
        </div>
      </div>

      <div class="uk-width-medium-1-2">
        <div class="uk-form-row">
          <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-medium-1-1">
              <label>Address</label>
              <%= f.text_field :address,class: 'md-input', required: true  %>
            </div>
          </div>
        </div>

      </div>
      </div>
      <div class="md-fab-wrapper">
        <%= button_tag(type: 'submit' , class: 'md-fab md-fab-accent md-fab-wave waves-effect waves-button') do %>
          <i class="fa fa-floppy-o" aria-hidden="true"></i>
        <% end %>
      </div>

      <% end %>

  </div>
